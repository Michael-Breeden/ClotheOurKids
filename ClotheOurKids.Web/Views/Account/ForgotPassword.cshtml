@model ClotheOurKids.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}


<div class="container">
    <h2 class="h2-responsive">Forgot Your Password?</h2>

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="row mt-2">
            <div class="col">
                <div class="md-form">
                    <i class="fa fa-envelope prefix"></i>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control validate" })
                    @Html.LabelFor(m => m.Email)
                </div>
            </div>
        </div>

        <div class="row mt-2 text-center">
            <div class="col">
                <input type="submit" value="Reset Password" class="btn btn-primary btn-rounded btn-lg waves-effect waves-light" />
            </div>
        </div>

    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
